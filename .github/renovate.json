{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "prHourlyLimit": 5,
  "minimumReleaseAge": "5 days",
  "labels": ["renovate"],
  "packageRules": [
    {
      "packageNames": ["@types/node", "node"],
      "allowedVersions": "20.x"
    },
    {
      "matchPackageNames": ["node", "npm"],
      "matchPackagePaths": ["engines"],
      "enabled": false
    },
    {
      "datasources": ["github-actions"],
      "packagePatterns": ["^actions/"],
      "groupName": "github-actions",
      "groupSlug": "actions-updates"
    },
    {
      "matchPackagePatterns": ["@edgio/.*"],
      "groupName": "Edgio Packages",
      "groupSlug": "edgio"
    },
    {
      "matchPackagePatterns": ["@edgio/.*"],
      "groupName": "Edgio Packages",
      "groupSlug": "edgio",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "packageNames": ["@sentry/nextjs"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["embla-carousel"],
      "groupName": "Embla Carousel Packages",
      "groupSlug": "embla-carousel"
    },
    {
      "packageNames": ["@tabler/icons-react"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "schedule": ["before 4am on Monday"]
}
